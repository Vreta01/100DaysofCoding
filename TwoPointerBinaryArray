public int LongestOnes(int[] nums, int k) {
        int left = 0;
        int right = 0;
        int maxCount = 0;

        for (right = 0; right < nums.Length; right++)
        {
            k += nums[right] == 0 ? -1 : 0;
            if (k < 0)
            {
                k += nums[left] == 0 ? 1 : 0;
                left++;
            } 
            else
            {
                maxCount = Math.Max(maxCount, right - left + 1);
            }
        }
        return maxCount;
    }
